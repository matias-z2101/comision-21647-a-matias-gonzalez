<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
    <title>Tareas</title>
</head>
<body style="background-color: #9e0536;">
    <div class="card" style="background-color: #822525; padding: 10px; margin: 40px 20px;">
        <div class="card-body">
            <h5 class="card-title" style="color: #ffffff; text-decoration: underline ; text-align: center; font-size: 40px;">Foro Personal</h5>
            <a type="button" class="btn btn-success" href="/agregar" style="margin-bottom: 30px;">
                Agregar Foro
            </a>
            <br>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" style="width: 10px;">ID</th>
                        <th scope="col" style="width: 10px;">Titulo</th>
                        <th scope="col" style="width: 20px;">Descripcion</th>
                        <th scope="col" style="width: 10px;">Imagen</th>
                        <th scope="col" style="width: 20px;">Fecha</th>
                        <th scope="col" style="width: 15px;">Editar</th>
                        <th scope="col" style="width: 15px;">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% tareas.forEach((item) => { %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.nombre %></td>
                        <td><%= item.descripcion %></td>
                        <td><%= item.imagen %></td>
                        <td><%= item.fecha %></td>
                        <td>
                            <a type="button" class="btn btn-info" href="/editar/<%= item.id %>">
                                Editar
                            </a>
                        </td>
                        <td>
                            <a type="button" class="btn btn-danger" href="/eliminar/<%= item.id %>">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>